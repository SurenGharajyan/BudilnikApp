<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.budilnikapp.MainActivity"
    android:background="#3791ff"
    android:orientation="vertical"
    >
<Button
    android:layout_width="match_parent"
    android:background="#ded276"
    android:id="@+id/repeating"
    android:text="@string/repeat"
    android:layout_height="wrap_content" />


    <Button
        android:layout_width="match_parent"
        android:background="#949"
        android:id="@+id/clean_All"
        android:text="@string/clean"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeating"
        />

    <Button
        android:layout_width="match_parent"
        android:background="#9092"
        android:id="@+id/One_Time"
        android:text="@string/one_time"
        android:layout_height="wrap_content"
        android:layout_below="@id/clean_All"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_below="@id/One_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
